<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:id="@+id/dialog_options_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message Options"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <!-- Message preview -->
    <TextView
        android:id="@+id/message_preview_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/message_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:textSize="14sp"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="Message content preview" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="16dp" />

    <!-- Options -->
    <Button
        android:id="@+id/option_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reply"
        android:textAlignment="textStart"
        android:drawableStart="@drawable/ic_reply"
        android:drawablePadding="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:paddingVertical="12dp"
        style="?android:attr/borderlessButtonStyle" />

    <Button
        android:id="@+id/option_forward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forward"
        android:textAlignment="textStart"
        android:drawableStart="@drawable/ic_forward"
        android:drawablePadding="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:paddingVertical="12dp"
        style="?android:attr/borderlessButtonStyle" />

    <Button
        android:id="@+id/option_resend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resend"
        android:textAlignment="textStart"
        android:drawableStart="@drawable/ic_refresh"
        android:drawablePadding="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:paddingVertical="12dp"
        android:visibility="gone"
        style="?android:attr/borderlessButtonStyle" />

    <Button
        android:id="@+id/option_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textAlignment="textStart"
        android:drawableStart="@drawable/ic_delete"
        android:drawablePadding="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:paddingVertical="12dp"
        android:textColor="@color/red"
        style="?android:attr/borderlessButtonStyle" />
</LinearLayout>